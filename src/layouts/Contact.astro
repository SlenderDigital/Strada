<!-- Contact Section -->
<section class="contact" id="contact-section">
    <h2 class="section-title">Contáctenos</h2>
    <div class="contact-grid">
        <div class="contact-info">
            <h3>Información de Contacto</h3>
            <p><strong>Dirección:</strong> Oficina Central, Argentina</p>
            <p><strong>Teléfono:</strong> +54 (XX) XXXX-XXXX</p>
            <p><strong>Email:</strong> info@strada.com.ar</p>
            <p><strong>Horario de Atención:</strong> Lunes a Viernes de 9:00 a 18:00</p>
            <h3 style="margin-top: 2rem;">Mercados Objetivo</h3>
            <p>China continental, Oriente Medio, Estados Unidos y Canadá, África, Sudeste Asiático, UE, Rusia, otros países europeos</p>
        </div>

        <div class="contact-form">
            <h3>Solicite una Cotización</h3>
            <form>
                <div class="form-group">
                    <label for="name">Nombre Completo</label>
                    <input type="text" id="name" required>
                </div>

                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" id="email" required>
                </div>

                <div class="form-group">
                    <label for="phone">Teléfono</label>
                    <input type="tel" id="phone">
                </div>

                <div class="form-group">
                    <label for="product">Producto de Interés</label>
                    <input type="text" id="product">
                </div>

                <div class="form-group">
                    <label for="message">Mensaje</label>
                    <textarea id="message" required></textarea>
                </div>

                <button type="submit" class="submit-button">Enviar Consulta</button>
            </form>
        </div>
    </div>
</section>
